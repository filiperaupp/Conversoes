<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="com.example.filip.conversoes.MainActivity">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="CONVERSÕES"
        android:padding="2dp"
        android:textAlignment="center"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/txMKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milhas para Quilômetros"
        android:textColor="#007700"
        android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <EditText
                android:id="@+id/edMKm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
            <Button
                android:id="@+id/btnMKm"
                android:text="CALCULAR"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <TextView
        android:id="@+id/resultadoMKm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Km:"
        android:textSize="18dp"

        android:textAlignment="center"/>
    <TextView
        android:id="@+id/resultadoMFeets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Pés: "
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txDolarReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dolar para Reais"
        android:textColor="#007700"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText
            android:id="@+id/edDolarReal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
        <Button
            android:id="@+id/btnDolarReal"
            android:text="CALCULAR"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/resultadoDolarReal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Resultado "
        android:textSize="18dp"
        android:layout_marginBottom="18dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txTangente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#007700"
        android:text="Tangente para ângulo"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText
            android:id="@+id/edTangente"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
        <Button
            android:id="@+id/btnTangente"
            android:text="CALCULAR"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/resultadoTangente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Resultado "
        android:textSize="18dp"
        android:textAlignment="center"/>




</LinearLayout>
